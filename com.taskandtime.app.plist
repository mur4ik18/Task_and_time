<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.taskandtime.app</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/pixi</string>
        <string>run</string>
        <string>python</string>
        <string>start_app_daemon.py</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>/tmp/task_and_time_stdout.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/task_and_time_stderr.log</string>
    
    <key>WorkingDirectory</key>
    <string>/Users/alex/Task_and_time</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>

